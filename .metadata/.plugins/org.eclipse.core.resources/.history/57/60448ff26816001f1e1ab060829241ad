#include "game.h"


void game_init()
{
	vga_ctrl->VRAM[1] = char_init(my_char);
    vga_ctrl->VRAM[2] = ball_attack_init(ball_attack);
	for (int i = 0; i < 8; i++)
	{
        if ((i != 1) && (i != 2)) vga_ctrl->VRAM[i] = 0;
	}
}

void game_run(int keycode)
{
    vga_ctrl->VRAM[1] = char_run(my_char,  keycode);
}